#!/bin/sh

T="docker-emulator"

{ docker build \
         -q \
         -t "${T:?}" \
         - \
         >/dev/null <<"EOF"
FROM debian:buster
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-pip \
    python3-setuptools \
 && rm -rf /var/lib/apt/lists/*
RUN pip3 install sdkmanager==0.3
# [sdkmanager packages repo](https://mirror.f-droid.org/android-free/repository/) has emulator.
# sdkmanager.py expects file with certain
# [name](https://gitlab.com/fdroid/sdkmanager/-/blob/0.3/sdkmanager.py#L42),
# location and
# [format](https://gitlab.com/fdroid/android-sdk-transparency-log/-/blob/4df3056ed86639f1fcd469bcdc64ee7a1ae1e4c4/checksums.json#L2697-2704).
RUN mkdir -p ~/.cache/sdkmanager \
 && printf '%s\n' '{"https://mirror.f-droid.org/android-free/repository/emulator-30-linux.zip":[{"source.properties":"Pkg.Revision=30\nPkg.Path=emulator"}]}' > ~/.cache/sdkmanager/checksums.json
RUN sdkmanager.py emulator
WORKDIR /workdir
ENTRYPOINT ["which", "emulator"]
EOF
} && {
    # shellcheck disable=SC2094
    docker run \
           -i \
           -a stdin \
           -a stdout \
           -a stderr \
           --network none \
           --rm \
           "${T:?}"; }
