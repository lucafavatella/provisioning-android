#!/bin/sh

T="docker-emulator"

{ docker build \
         -q \
         -t "${T:?}" \
         - \
         >/dev/null <<"EOF"
FROM debian:buster AS builder
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    jq \
 && rm -rf /var/lib/apt/lists/*
WORKDIR /workdir

# https://mirror.f-droid.org/android-free/repository/
# https://gitlab.com/fdroid/sdkmanager/-/blob/0.3/sdkmanager.py#L320
# https://gitlab.com/fdroid/android-sdk-transparency-log/-/blob/4df3056ed86639f1fcd469bcdc64ee7a1ae1e4c4/checksums.json#L2697-2704
ADD https://mirror.f-droid.org/android-free/repository/emulator-30-linux.zip emulator-30-linux.zip
{"https://mirror.f-droid.org/android-free/repository/emulator-30-linux.zip":[{"source.properties":"Pkg.Revision=30\nPkg.Path=emulator"}]}


FROM debian:buster
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-pip \
    python3-setuptools \
 && rm -rf /var/lib/apt/lists/*
RUN pip3 install sdkmanager==0.3
WORKDIR /workdir
RUN ~/.cache/sdkmanager/checksums.json
ENTRYPOINT ["find", "/", "-name", "sdkmanager"]
EOF
} && {
    # shellcheck disable=SC2094
    docker run \
           -i \
           -a stdin \
           -a stdout \
           -a stderr \
           --network none \
           --rm \
           "${T:?}"; }
